<addons>
    <addon id="repository.natkitv" name="NATKITV REPO" version="1.0.0" provider-name="natki">
        <requires>
            <import addon="xbmc.addon" version="19.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="NATKITV REPO">
            <info compressed="false">https://natiliza.github.io/natki-tv/addons.xml</info>
            <checksum>https://natiliza.github.io/natki-tv/addons.xml.md5</checksum>
            <datadir>https://natiliza.github.io/natki-tv/zips/</datadir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>מאגר הרחבות NatkiTV</summary>
            <description>מאגר הרחבות מותאם אישית של נטקי טי וי</description>
            <platform>all</platform>
            <icon>https://natiliza.github.io/natki-tv/zips/repository.natkitv/icon.png</icon>
            <fanart>https://natiliza.github.io/natki-tv/zips/repository.natkitv/fanart.jpg</fanart>
        </extension>
    </addon>

    <addon id="repository.fishenzon" name="Fishenzon Repo" version="1.0.3" provider-name="fishenzon">
        <extension point="xbmc.addon.repository" name="Fishenzon Repo">
            <info compressed="false">https://raw.githubusercontent.com/fishenzon/repo/master/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/fishenzon/repo/master/addons.xml.md5</checksum>
            <datadir>https://raw.githubusercontent.com/fishenzon/repo/master/zips/</datadir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Fishenzon Repo</summary>
            <description>Fishenzon Repo</description>
            <platform>all</platform>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </extension>
    </addon>

    <addon id="plugin.video.idanplus" name="עידן פלוס" version="9.0.1" provider-name="fishenzon">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
            <import addon="script.module.requests"/>
            <import addon="script.module.multidict"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="default.py"/>
        <extension point="xbmc.service" library="resources/lib/service.py" start="login|startup"/>
        <extension point="xbmc.addon.metadata">
            <summary>צפייה ישירה בערוצי עידן פלוס</summary>
            <description>צפייה ישירה בערוצי עידן פלוס המשודרים באוויר בישראל. בנוסף שידורים חיים מהכנסת, ערוץ 20, ערוץ 24, חינוכית, ערוץ כנסת ועוד.</description>
            <platform>all</platform>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </extension>
    </addon>
</addons>
